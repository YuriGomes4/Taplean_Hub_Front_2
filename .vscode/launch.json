{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Depurador do Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app/main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "5050"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}